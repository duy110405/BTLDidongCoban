<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"> <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_marginEnd="8dp">

    <TextView
        android:id="@+id/txtTennhiemvu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        tools:text="Tên Nhiệm Vụ Chính"/>

    <TextView
        android:id="@+id/txtMota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        tools:text="Mô tả về nhiệm vụ"/>

    <TextView
        android:id="@+id/txtGiohethan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="2dp"
        tools:text="📅 27/10/2025 lúc 10:30 PM"/>

</LinearLayout>

    <CheckBox
        android:id="@+id/cbNhiemvu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:minWidth="0dp"
        android:minHeight="0dp"/>
</LinearLayout>