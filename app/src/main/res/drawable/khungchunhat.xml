<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền bên trong -->
    <solid android:color="@android:color/white" />

    <!-- Đường viền -->
    <stroke
        android:width="2dp"
        android:color="#6B6A6A" />

    <!-- Bo góc -->
    <corners android:radius="0dp" />

    <!-- Padding (nếu muốn khoảng cách giữa border và nội dung) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
